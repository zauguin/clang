template <typename T>
using get_enumerators_m = typename get_enumerators<T>::type;

template <typename T, template <class...> class Tpl>
struct unpack_sequence {
	template <__metaobject_id ... MoIds>
	struct __unpack_helper {
		typedef Tpl<__metaobject<MoIds>...> type;
	};

	typedef typename __unpack_metaobject_seq<
		__unpack_helper,
		__unwrap_id_v<T>
	>::type type;
};

template <typename T, template <class...> class Tpl>
using unpack_sequence_t = typename unpack_sequence<T, Tpl>::type;

template <typename ... Mos>
struct __for_each_helper;

template <__metaobject_id ... MoIds>
struct __for_each_helper<__metaobject<MoIds>...>
{
	template <typename MO>
	struct do_call_func {
		template <typename Func>
		inline do_call_func(Func& func) { func(MO{}); }
	};

	struct call_func
	 : do_call_func<__metaobject<MoIds>>...  {
		template <typename Func>
		inline call_func(Func& func)
		 : do_call_func<__metaobject<MoIds>>(func)...
		{ }
	};

	template <typename Func>
	static inline void apply(Func& func) { call_func cf(func); }
};

template <typename MoS, typename Func>
static inline
void for_each(Func func)
{
	unpack_sequence_t<MoS, __for_each_helper>::apply(func);
}

