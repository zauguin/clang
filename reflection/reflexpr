template <typename T>
struct get_pointer
 : integral_constant<
	__unrefltype(__metaobject_get_pointer(__unwrap_id_v<T>)),
	__metaobject_get_pointer(__unwrap_id_v<T>)
> { };

template <typename T>
constexpr auto get_pointer_v = get_pointer<T>::value;

template <typename T>
struct get_constant
 : integral_constant<
	__unrefltype(__metaobject_get_constant(__unwrap_id_v<T>)),
	__metaobject_get_constant(__unwrap_id_v<T>)
> { };

template <typename T>
constexpr auto get_constant_v = get_constant<T>::value;

template <typename T>
struct get_reflected_type
{
	typedef __unrefltype(__unwrap_id_v<T>) type;
};

template <typename T>
using get_reflected_type_t = typename get_reflected_type<T>::type;

